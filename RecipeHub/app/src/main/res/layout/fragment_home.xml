<android.widget.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:id="@+id/hello_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, User"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/cook_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What would you like to cook today?"
                    android:textSize="24sp"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/avatar_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder_avatar_24px"
                android:contentDescription="Avatar Image"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search recipes"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/search_bar_background"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/search_24px"
        android:drawablePadding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/categories_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start">

                <Button
                    android:id="@+id/category_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category 1"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/category_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category 2"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/category_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category 3"
                    android:layout_marginEnd="16dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/recommendation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start">

                <ImageView
                    android:id="@+id/recommendation1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe 1"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/recommendation2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe 2"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/recommendation3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe 3"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/recommendation4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe 3"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/recommendation5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe 3"
                    android:layout_marginEnd="16dp"/>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/recipes_of_the_week_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipes of the Week"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start">

                <ImageView
                    android:id="@+id/week_recipe_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe of the Week 1"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/week_recipe_2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe of the Week 2"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/week_recipe_3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe of the Week 3"
                    android:layout_marginEnd="16dp"/>
                <ImageView
                    android:id="@+id/week_recipe_4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe of the Week 4"
                    android:layout_marginEnd="16dp"/>
                <ImageView
                    android:id="@+id/week_recipe_5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/placeholder_image"
                    android:contentDescription="Recipe of the Week 5"
                    android:layout_marginEnd="16dp"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>
</android.widget.ScrollView>
